@model IEnumerable<INTEX.Models.Test>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tests List</h2>

<p>
    @Html.ActionLink("Create New", "TestsCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TestDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasePrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TestDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasePrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "TestsEdit", new { id=item.TestID }) |
            @Html.ActionLink("Details", "TestsDetails", new { id=item.TestID }) |
            @Html.ActionLink("Delete", "TestsDelete", new { id=item.TestID })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Employee Portal", "Index")
</p>
