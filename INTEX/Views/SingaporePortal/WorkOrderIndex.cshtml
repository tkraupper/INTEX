@model IEnumerable<INTEX.Models.WorkOrder>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Work Orders List</h2>

<p>
    @Html.ActionLink("Print Work Order List", "Print")
</p>
<p>
    @Html.ActionLink("View Active Work Order List", "ActiveWorkOrderIndex")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WorkOrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfirmationSentDate)
        </th>
        <th>
            Samples
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkOrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmationSentDate)
            </td>
            <td>
                @*This link redirects to an action that allows you to assign an LTNumber and CSC*@
                @Html.ActionLink("Add Samples to Work Order", "SamplesIndex", new { id = item.WorkOrderID })
            </td>

            <td>
                @Html.ActionLink("Edit", "WorkOrderEdit", new { id = item.WorkOrderID }) |
                @Html.ActionLink("Details", "WorkOrderDetails", new { id = item.WorkOrderID }) |
                @Html.ActionLink("Delete", "WorkOrderDelete", new { id = item.WorkOrderID })
            </td>
        </tr>
    }

</table>

