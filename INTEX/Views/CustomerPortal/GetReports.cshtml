@model IEnumerable<INTEX.Models.WorkOrder>

@{
    ViewBag.Title = "GetReports";
}

<ul class="breadcrumb">
    <li><a href=@Url.Action("Index")>Home</a></li>
    <li class="active">Reports</li>
</ul>

<h2>Completed Work Orders for @Model.First().Customer.Name</h2>


