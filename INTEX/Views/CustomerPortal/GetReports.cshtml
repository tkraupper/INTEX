    @foreach (var item in Model)
    {
        <tr>
            <td>
                Work Order #@item.WorkOrderID
            </td>
            <td>
                <p>Assays:</p>
                @foreach (var s in item.Sample)
                {
                    @:<p>
                        @s.Assay.AssayName
                    @:</p>
                }
            </td>
            <td>
                <p>Samples:</p>
                @foreach (var s in item.Sample)
                {
                    @:<p>
                        @s.Compound.CompoundName
                    @:</p>
                }
            </td>
            <td>
                <p>Comments:</p>
                <p>@Html.DisplayFor(modelItem => item.Comments)</p>
            </td>
            <td>
                @Html.ActionLink("Data Report", "DataReport") |
                @Html.ActionLink("Summary Report", "SummaryReport")
            </td>
        </tr>
    }

</table>
