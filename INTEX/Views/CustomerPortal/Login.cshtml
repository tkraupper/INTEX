
<h2>Login</h2>
<div class="jumbotron col-lg-12">
    <div class="col-lg-12">
        <h2 class="page-header">Customer Portal</h2>
    </div>
    <form action=@Url.Action("Login") method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="uname" class="control-label col-md-2" style="font-size:20px;">Username:</label>
            <div class="col-md-10">
                <input class="form-control" placeholder="Enter Username" name="uname" required />
            </div>
        </div>
        <br />
        <br />

        <div class="form-group">
            <label for="psw" class="control-label col-md-2" style="font-size:20px;">Password:</label>
            <div class="col-md-10">
                <input class="form-control" placeholder="Enter Password" name="psw" required />
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="col-md-2">
            <button class="btn btn-lg btn-primary" type="submit">Login</button>
        </div>
    </form>
</div>

