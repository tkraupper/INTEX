@model IEnumerable<INTEX.Models.WorkOrder>

@{
    ViewBag.Title = "WONeedingPricing";
}

<ul class="breadcrumb">
    <li><a href=@Url.Action("Index")>Home</a></li>
    <li class="active">Work Orders to Price</li>
</ul>

<h2>This view will allow employees to view all work orders with incomplete pricing info and select one to price.</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContactInfo.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayInfo.Card)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quote.QuoteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfirmationSentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SummaryReport)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactInfo.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PayInfo.Card)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quote.QuoteID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConfirmationSentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SummaryReport)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WorkOrderID }) |
            @Html.ActionLink("Details", "Details", new { id=item.WorkOrderID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WorkOrderID })
        </td>
    </tr>
}

</table>
