        <img class="HeaderImg" style="width:350px; height:auto;" src="~/Content/Images/TestTubes.jpeg" />
    </div>**@
</div>

<br /><br /><br /><br /><br />

<div class="row">
    <div class="col-md-4">
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <img align="right" src="~/Content/Images/chemistry.png" width="50%" alt="Card image cap">
                <h3 class="card-title">Protocol Notebook</h3>
                <p class="card-text">See a list of available tests</p>
                <a href=@Url.Action("ProtocolCatalog") class="btn btn-primary">View List</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <img align="right" src="~/Content/Images/atoms.png" width="50%" alt="Card image cap">
                <h3 class="card-title">Pharmacology Catalog</h3>
                <p class="card-text">See a list of our previously tested compounds</p>
                <a href=@Url.Action("PharmacologyCatalog") class="btn btn-primary">View Catalog</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <img align="right" src="~/Content/Images/invoice.png" width="50%" alt="Card image cap">
                <h3 class="card-title">Request Quote</h3>
                <p class="card-text">Interested in doing business with us?</p>
                <a href=@Url.Action("PharmacologyCatalog") class="btn btn-primary">Request Your Quote</a>
            </div>
        </div>
    </div>
</div>
